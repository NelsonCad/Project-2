<div class="container">
  <br>
  <h1>Upload a piece of art!</h1>
  <br>
  <form method="post" action="" enctype="multipart/form-data" id="myform">
    <div class="preview">
      <img src="" id="img" width="100" height="100" />
    </div>
    <div>
      <input type="file" id="file" name="file" />
    </div>
    <br>
    <div class="form-group">
      <label for="example-text">Art Title:</label>
      <input type="text" id="name" name="name" class="form-control" aria-describedby="example-text"
        placeholder="What is the title of this art?">
    </div>
    <div class="form-group">
      <label for="example-text">Art Description:</label>
      <input type="text" id="description" class="form-control" aria-describedby="example-text"
        placeholder="What is a short description of this art?">
    </div>
    <br>
    <div> 
      <input type="button" class="button" value="Upload" id="btn_upload" />
    </div>
  </form>
</div>
