<!doctype html>
<html lang="en">
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="/">Fumblr <i class="fas fa-palette"></i></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
      aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <div class="navbar-nav mr-auto">
            <a class="nav-item nav-link" href="/home">Home</a>
            <a class="nav-item nav-link active" href="/artists">Artists<span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link " href="/art">Browse Art </a>
            {{#if loggedIn}}
            <a class="nav-item nav-link" href="/submitart">Submit Art</a>
            {{/if}}
        </div>
    </div>
    {{#if loggedIn}}
    <a href="/logout" class="nav-item nav-link">Log out</a>
    {{else}}
    <a class="nav-item nav-link" href="/login">Login/Signup Here!</a>
    {{/if}}
</nav>
<div id="artist">
    <div class="container artist">
        <div class="col">
            <div class="row">
                {{#each examples}}
                <div class="card text-white bg-secondary mb-3 artistCard" data-id="{{this.id}}"
                    style="max-width: 20rem;">
                    <div class="card-header">{{this.artistName}}</div>
                    <div class="card-body">
                        <p class="card-text">Age: {{this.age}}</p>
                        <p class="card-text">From: {{this.country}}</p>
                        <a class="card-text" href="#" style="color:black">View art</a>
                    </div>
                </div>
                {{/each}}</p>
            </div>
        </div>
    </div>
</div>
</div>