<!doctype html>
<html lang="en">
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="/">Fumblr <i class="fas fa-palette"></i></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
        aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <div class="navbar-nav mr-auto">
      <a class="nav-item nav-link" href="/home">Home</a>
      <a class="nav-item nav-link" href="/artists">Artists</a>
      <a class="nav-item nav-link active" href="/art">Browse Art <span class="sr-only">(current)</span></a>
      <a class="nav-item nav-link" href="/submit">Submit Art</a>
    </div>
    </div>
    <span class="navbar-text" href="#">Sign Up!</span>
</nav>
<div id="artist">
    <div class="container artist">
        <div class="col">
            <div class="row">
                {{#each examples}}
                <div class="card text-white bg-secondary mb-3 artistCard" data-id="{{this.id}}" style="max-width: 20rem;">
                    <div class="card-header">{{this.artTitle}}</div>
                    <div class="card-body">
                        <img src="{{this.artLink}}" class="card-img-top" alt="artist piece">
                        <h4 class="card-title"><a href="example/{{this.artLink}}"></a></h4>
                        <p class="card-text">{{this.artDescription}}</p>
                    </div>
                </div>
                {{/each}}</p>
            </div>
        </div>
    </div>
</div>
</div>